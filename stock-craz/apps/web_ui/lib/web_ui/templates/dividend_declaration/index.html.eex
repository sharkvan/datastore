<h2>Listing Dividend declarations</h2>

<table class="table">
  <thead>
    <tr>
      <th>Stock</th>
      <th>Pay date</th>
      <th>Ex date</th>
      <th>Rec date</th>
      <th>Dec date</th>
      <th>Amount</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for dividend_declaration <- @dividend_declarations do %>
    <tr>
      <td><%= dividend_declaration.stock_id %></td>
      <td><%= dividend_declaration.pay_date %></td>
      <td><%= dividend_declaration.ex_date %></td>
      <td><%= dividend_declaration.rec_date %></td>
      <td><%= dividend_declaration.dec_date %></td>
      <td><%= dividend_declaration.amount %></td>

      <td class="text-right">
        <span><%= link "Show", to: dividend_declaration_path(@conn, :show, dividend_declaration), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: dividend_declaration_path(@conn, :edit, dividend_declaration), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: dividend_declaration_path(@conn, :delete, dividend_declaration), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Dividend declaration", to: dividend_declaration_path(@conn, :new) %></span>
