<h2>Show Investment</h2>

<ul>

  <li>
    <strong>Stock:</strong>
    <%= @investment.stock_id %>
  </li>

  <li>
    <strong>Cost basis:</strong>
    <%= @investment.cost_basis %>
  </li>

  <li>
    <strong>Investment date:</strong>
    <%= @investment.investment_date %>
  </li>

  <li>
    <strong>Starting shares:</strong>
    <%= @investment.starting_shares %>
  </li>

  <li>
    <strong>Shares:</strong>
    <%= @investment.shares %>
  </li>

  <li>
    <strong>Target roi:</strong>
    <%= @investment.target_roi %>
  </li>

</ul>

<span><%= link "Edit", to: portfolio_investment_path(@conn, :edit, @portfolio_id, @investment) %></span>
<span><%= link "Back", to: portfolio_investment_path(@conn, :index, @portfolio_id) %></span>
